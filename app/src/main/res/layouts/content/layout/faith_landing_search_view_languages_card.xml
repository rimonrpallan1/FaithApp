<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/landing_search_filter_language_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/_30"
        android:layout_height="@dimen/_50">


        <LinearLayout
            android:id="@+id/landing_search_filter_languages_card_"
            android:layout_width="@dimen/_0.5"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>

        <ImageView
            android:id="@+id/landing_search_filter_languages_card_text_outer_img_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/faith_landing_card_view_outer_yellow_img" />

        <LinearLayout
            android:id="@+id/landing_search_filter_languages_card_last_line"
            android:layout_width="@dimen/_0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_30"
            android:layout_gravity="center_horizontal"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_04"
        android:orientation="vertical">

        <TextView
            android:id="@+id/landing_search_filter_languages_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Languages"/>

    </LinearLayout>



</LinearLayout>