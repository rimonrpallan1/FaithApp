<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/faith_card_view_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/_30"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/faith_landing_card_view_"
            android:layout_width="@dimen/_0.5"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>

        <ImageView
            android:id="@+id/faith_landing_card_view_outer_img_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/faith_landing_card_view_outer_yellow_img" />


    </FrameLayout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/faith_card_view_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120"
        android:layout_marginBottom="@dimen/_08"
        android:layout_marginRight="@dimen/_10"
        android:layout_marginTop="@dimen/_08"
        app:cardCornerRadius="@dimen/_04"
        app:cardElevation="0"
        app:setCardBackgroundColor="@color/faith_background_card_color">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/faith_card_view_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_12"
                android:layout_marginRight="@dimen/_12">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/card_view_church_photo"
                    android:layout_width="@dimen/_80"
                    android:layout_height="@dimen/_80"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:src="@android:drawable/dialog_holo_dark_frame" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_12"
                android:layout_marginTop="@dimen/_18"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_view_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_08"
                    android:text="TITLE"
                    android:textColor="@color/faith_card_title"
                    android:textSize="@dimen/_15" />

                <TextView
                    android:id="@+id/card_view_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45"
                    android:layout_marginTop="@dimen/_04"
                    android:text="Description"
                    android:textSize="@dimen/_12" />


                <FrameLayout
                    android:id="@+id/card_view__icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_24"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_view_church_followers_icon"
                        android:layout_width="@dimen/_10"
                        android:layout_height="@dimen/_12"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/_06"
                        android:background="@drawable/multiple_user" />

                    <TextView
                        android:id="@+id/card_view_church_followers_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/_24"
                        android:text="500 FOLLOWERS"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10" />

                    <LinearLayout
                        android:id="@+id/card_view_church_heart_layout_icon"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_18"
                        android:layout_gravity="end|center">

                        <ImageView
                            android:id="@+id/card_view_church_favourite_icon"
                            android:layout_width="@dimen/_18"
                            android:layout_height="@dimen/_18"
                            android:layout_marginRight="@dimen/_10"
                            android:background="@drawable/icon_heart" />
                    </LinearLayout>


                </FrameLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>