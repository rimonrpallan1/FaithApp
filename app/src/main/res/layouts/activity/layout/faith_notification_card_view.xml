<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/faith_card_view_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/_30"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/faith_landing_card_view_"
            android:layout_width="@dimen/_0.5"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15"
            android:background="@color/faith_landing_card_view_line_color">

        </LinearLayout>


        <ImageView
            android:id="@+id/faith_notification_card_view_Ima"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_04"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/faith_landing_card_view_outer_img_" />


    </FrameLayout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/faith_notification_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90"
        android:layout_marginBottom="@dimen/_06"
        android:layout_marginRight="@dimen/_14"
        android:layout_marginTop="@dimen/_14"
        app:cardCornerRadius="@dimen/_04"
        app:cardElevation="0"
        app:setCardBackgroundColor="@color/faith_background_card_color">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/faith_notification_card_view_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_16"
                android:layout_marginTop="@dimen/_14"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/notification_card_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TITLE"
                        android:paddingLeft="@dimen/_04"
                        android:paddingRight="@dimen/_04"
                        android:paddingBottom="2dp"
                        android:background="@android:color/holo_red_dark"
                        android:textColor="@color/faith_background_card_color"
                        android:textSize="@dimen/_12" />

                    <TextView
                        android:id="@+id/notification_card_view_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_24"
                        android:layout_gravity="end|center"
                        android:layout_marginRight="@dimen/_10"
                        android:text="15 min"
                        android:textSize="@dimen/_12" />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">


                </LinearLayout>

                <TextView
                    android:id="@+id/notification_card_view_sub_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Heading"
                    android:textColor="@color/faith_card_title"
                    android:textSize="@dimen/_14" />


                <TextView
                    android:id="@+id/notification_card_view_description"
                    android:layout_width="@dimen/_250"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="@dimen/_10" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>